local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")

local pulling = false
local pulled = nil
local dragOffset = Vector3.new(0, 0, -2)

-- หาเป้าหมายที่ใกล้ที่สุด (เฉพาะที่อยู่สูงหรือต่ำกว่าเรา)
local function getClosestPlayer()
    local closest = nil
    local shortestDistance = math.huge
    local character = LocalPlayer.Character
    local myRoot = character and character:FindFirstChild("HumanoidRootPart")
    if not myRoot then return nil end

    for _, player in ipairs(Players:GetPlayers()) do
        if player ~= LocalPlayer and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
            local targetRoot = player.Character.HumanoidRootPart
            local verticalDiff = math.abs(targetRoot.Position.Y - myRoot.Position.Y)
            if verticalDiff > 5 then -- ต้องสูงหรือต่ำกว่าเราอย่างน้อย 5 studs
                local dist = (targetRoot.Position - myRoot.Position).Magnitude
                if dist < shortestDistance then
                    closest = player
                    shortestDistance = dist
                end
            end
        end
    end
    return closest
end

-- GUI ถาวร
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "PullGui"
ScreenGui.ResetOnSpawn = false
ScreenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")

local PullButton = Instance.new("TextButton")
PullButton.Size = UDim2.new(0, 60, 0, 60)
PullButton.Position = UDim2.new(0.8, 0, 0.7, 0)
PullButton.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
PullButton.TextColor3 = Color3.new(1, 1, 1)
PullButton.TextScaled = true
PullButton.Text = "⚡"
PullButton.AutoButtonColor = true
PullButton.Parent = ScreenGui

local UIScale = Instance.new("UIStroke", PullButton)
UIScale.Thickness = 2
UIScale.Color = Color3.fromRGB(50, 50, 50)
UIScale.ApplyStrokeMode = Enum.ApplyStrokeMode.Border

local UICorner = Instance.new("UICorner", PullButton)
UICorner.CornerRadius = UDim.new(1, 0)

-- ลากปุ่มได้
local dragging = false
local dragInput, dragStart, startPos

local function update(input)
    local delta = input.Position - dragStart
    PullButton.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

PullButton.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = PullButton.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

PullButton.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        update(input)
    end
end)

-- เปิด/ปิดกระชาก
PullButton.MouseButton1Click:Connect(function()
    pulling = not pulling
    if pulling then
        pulled = getClosestPlayer()
        if pulled then
            PullButton.Text = "⛔"
        else
            pulling = false
            PullButton.Text = "⚡"
        end
    else
        if pulled and pulled.Character and pulled.Character:FindFirstChild("HumanoidRootPart") then
            pulled.Character.HumanoidRootPart.Anchored = false
        end
        pulled = nil
        PullButton.Text = "⚡"
    end
end)

-- ลากเป้าหมาย
UserInputService.TouchMoved:Connect(function(touch, gp)
    if pulling and pulled and pulled.Character and pulled.Character:FindFirstChild("HumanoidRootPart") then
        local mousePos = UserInputService:GetMouseLocation()
        local ray = workspace.CurrentCamera:ScreenPointToRay(mousePos.X, mousePos.Y)
        local targetPos = ray.Origin + ray.Direction * 10
        dragOffset = targetPos - LocalPlayer.Character.HumanoidRootPart.Position
    end
end)

RunService.Heartbeat:Connect(function()
    if pulling and pulled and pulled.Character and pulled.Character:FindFirstChild("HumanoidRootPart") then
        local myRoot = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
        if myRoot then
            local targetRoot = pulled.Character.HumanoidRootPart
            targetRoot.Anchored = true
            targetRoot.CFrame = CFrame.new(myRoot.Position + dragOffset)
            targetRoot.AssemblyLinearVelocity = Vector3.new(0, 250, 0)
        end
    end
end)
